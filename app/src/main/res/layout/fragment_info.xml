<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.InfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginHorizontal="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="10dp"
                android:text="Asfixia"
                android:textAppearance="?attr/textAppearanceHeadline4"
                />
            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Esta es la descripcion"
                android:textAppearance="?attr/textAppearanceBody1"
                />

            <ImageView
                android:id="@+id/img_pa"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@drawable/hemorragias2"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"/>

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/pasos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estos son los pasos"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Ver video en YouTube"/>

            <!--<VideoView
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="10dp" />-->

        </LinearLayout>


    </ScrollView>




</FrameLayout>